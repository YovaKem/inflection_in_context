_	komissio	_
on	_	_
alkanut	_	_
jo	_	_
kaksi	_	_
vuotta	_	_
sitten	_	_
tarkistaa	_	_
perinpohjaisesti	_	_
nykyistä	_	_
leludirektiiviä	_	_
.	_	_

Siksi	_	_
komissio	_	_
on	_	_
alkanut	_	_
jo	_	_
kaksi	_	_
vuotta	_	_
sitten	_	_
tarkistaa	_	_
perinpohjaisesti	_	_
_	nykyinen	_
leludirektiiviä	_	_
.	_	_

_	komissio	_
on	_	_
esittänyt	_	_
teille	_	_
jo	_	_
tämän	_	_
vuoden	_	_
alussa	_	_
kokonaisen	_	_
paketin	_	_
toimia	_	_
,	_	_
joilla	_	_
vahvistetaan	_	_
markkinavalvontaa	_	_
ja	_	_
suojellaan	_	_
CE-merkintä	_	_
entistä	_	_
paremmin	_	_
.	_	_

