saatuja	_	_
tarjouksia	_	_
.	_	_

Jos	_	_
eri	_	_
tarjoukset	_	_
koskevat	_	_
samaa	_	_
erää	_	_
ja	_	_
niiden	_	_
yhteismäärä	_	_
ylittää	_	_
käytettävissä	_	_
olevan	_	_
määrän	_	_
,	_	_
vähimmäishinta	_	_
voidaan	_	_
_	vahvistaa	_
erikseen	_	_
jokaiselle	_	_
erälle	_	_
.	_	_

